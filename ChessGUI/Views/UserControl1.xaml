<UserControl x:Class="ChessGUI.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="DarkSlateGray">

            <local:ChessBoardView Margin="30"  RenderTransformOrigin="0.5,0.5">
                <local:ChessBoardView.RenderTransform>
                    <RotateTransform Angle="0"/>
                </local:ChessBoardView.RenderTransform>
            </local:ChessBoardView>
        </Grid>
        <Grid Grid.Column="1" Background="#705f78"/>
    </Grid>
</UserControl>
